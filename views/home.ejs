<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/home.css">
    <title>FactGuard</title>
</head>
<body>
    <%- include('layout/nav-user', {name: 'greenpeace', role: 'user'}); %>
    <div class="container">

        <div class="form-post">
            <h2>Create Post</h2>
            <form action="/user/home" method="post">
                <div>
                    <input type="hidden" name="UserId" value="<%= UserId %>">
                    <input type="text" name="title" placeholder="title">
                </div>
                <div>
                    <input type="text" name="imgUrl" placeholder="image url">
                </div>
                <div>
                    <textarea name="content" cols="80" rows="3" placeholder="write description here..."></textarea>
                </div>
                <div>
                    <button type="submit">Post</button>
                    <% if (error) { %>
                        <span class="error"><%= error.split(',').join(' ') %></span> 
                     <% } %>
                </div>
            </form>
        </div>

        <div class="profile">
            <div class="title">
                <h2>Account</h2>
            </div>
            <div class="user-profile">
                <p>userId: </p>
                <p>username: greenpeace</p>
                <p>role: user</p>
            </div>

            <div class="title">
                <h2>Profile</h2>
            </div>
            <div>
                <p>Name: </p>
                <p>Birth: </p>
                <p>Hobby: </p>
                <p>Gender: </p>
                <p>Organization: </p>
                <p>Join FG: </p>
            </div>
        </div>
        
        <div class="post">
            <div class="title">
                <h2>Post</h2>
            </div>
            <% if (posts.length != 0) { %>
            <% posts.forEach(el => { %>
            <div class="card-post">
                <img src="<%= el.imgUrl %>">
                <h4><%= el.title %> ~ <%= el.User.username %></h4>
                <div class="release-date">
                    <span>( Release : <%= el.formatLocalDate %> )</span>
                </div>
                <p><%= el.content %></p>
            </div>
            <% }) %>
            <% } %>
        </div>
    </div>
</body>
</html>